<% if user_signed_in? %>
<%= link_to 'Create a new post', new_post_path %><br><br>
<% end %>
<br><br>
<% @posts.each do |post| %>
  <div class="post">
    <div class="title">
      <%= link_to post.title, post %>
    </div>
    <div class="body">
      <%= post.body %>
    </div>
    <div class="author">
    <% if user_signed_in? %>
      <%= post.user.username %>
    <% else %>
      Anonymous
    <% end %>
    </div>
  </div>
  <br>
<% end %>
<br><br>
<small>Have a nice day. <3</small>