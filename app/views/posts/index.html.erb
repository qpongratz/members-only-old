<%= link_to 'Create a new post', new_post_path %><br><br>
<br><br>
<% @posts.each do |post| %>
  <div class="post">
    <div class="title">
      <%= link_to post.title, post %>
    </div>
    <div class="body">
      <%= post.body %>
    </div>
    <div class="author">
    <% if user_signed_in? %>
      <%= post.user.username %>
    <% else %>
      Anonymous
    <% end %>
    </div>
  </div>
  <br>
<% end %>
